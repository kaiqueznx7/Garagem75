@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<!-- RESTRICT -->
<section id="restrict" class="py-5 bg-dark text-light">
    <div class="container">
        <h2 class="text-center mb-4">Área Restrita</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <!-- ✅ Login POST (fica aqui mesmo) -->
                <form method="post" asp-controller="Usuario" asp-action="Index" class="border rounded p-3 bg-black">
                    @Html.AntiForgeryToken()
                    

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input id="email" name="email" type="email" class="form-control" placeholder="usuario@saphiraterror.com" required />
                    </div>

                    <div class="mb-3">
                        <label for="senha" class="form-label">Senha</label>
                        <input id="senha" name="senha" maxlength="6" type="password" class="form-control" placeholder="******" required />
                    </div>

                    <button type="submit" class="btn btn-danger w-100">Entrar</button>

                    <div class="text-danger mt-2">
                        @Html.ValidationSummary(excludePropertyErrors: true)
                    </div>
                </form>

                <p class="text-muted mt-3 mb-0">
                    Acesso liberado conforme seu perfil: <em>Administrador</em>, <em>Gerente</em> ou <em>Outros</em>.
                </p>
            </div>
        </div>
    </div>
</section>