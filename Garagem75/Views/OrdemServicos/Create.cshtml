@model Garagem75.Models.OrdemServico

@{
    ViewData["Title"] = "Criar nova ordem de serviço";
}

<h1>Criar Ordem de Serviço</h1>

<h4>OrdemServico</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataServico" class="control-label"></label>
                <input asp-for="DataServico" class="form-control" />
                <span asp-validation-for="DataServico" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaoDeObra"></label>
                <input asp-for="MaoDeObra" type="text" class="form-control" />
                <span asp-validation-for="MaoDeObra" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="ValorDesconto"></label>
                <input asp-for="ValorDesconto" type="text" class="form-control" id="ValorDesconto" />
                <span asp-validation-for="ValorDesconto" class="text-danger"></span>
            </div>

           @*  <div class="form-group">
                <label asp-for="ValorTotal" class="control-label"></label>
                <input asp-for="ValorTotal" class="form-control" readonly />
                <span asp-validation-for="ValorTotal" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataEntrega" class="control-label"></label>
                <input asp-for="DataEntrega" class="form-control" />
                <span asp-validation-for="DataEntrega" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VeiculoId" class="control-label"></label>
                <select asp-for="VeiculoId" class="form-control" asp-items="ViewBag.VeiculoId">
                    <option value="">Selecione um veículo</option>
                </select>
                <span asp-validation-for="VeiculoId" class="text-danger"></span>
            </div>

            <h4>Peças utilizadas</h4>
            <div class="form-group">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Peça</th>
                            <th>Preço Unitário</th>
                            <th>Quantidade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var peca in (List<Garagem75.Models.Peca>)ViewBag.Pecas)
                        {
                            <tr>
                                <td>@peca.Nome</td>
                                <td>R$ @peca.Preco.ToString("N2")</td>
                                <td>
                                    <input type="hidden" class="peca-id-input" name="pecaIds" value="@peca.IdPeca" disabled />
                                    <input type="number"
                                           class="form-control form-control-sm peca-quantidade-input"
                                           data-peca-id="@peca.IdPeca"
                                           value="0"
                                           min="0"
                                           style="width: 80px;" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        // Este Partial carrega os scripts de validação do jQuery
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

    <script>
        $(document).ready(function () {
            // Aplica máscara (MANTENHA)
            $('#MaoDeObra, #ValorDesconto').mask('000.000.000,00', { reverse: true });

            // Sobrescrita do $.validator.methods.number (Aceita milhar e vírgula decimal)
            if ($.validator && $.validator.methods) {
                $.validator.methods.number = function (value, element) {
                    if (this.optional(element)) {
                        return true;
                    }
                    var val_limpo = value.replace(/\./g, '');
                    var val_padrao = val_limpo.replace(/,/g, '.');
                    return !isNaN(parseFloat(val_padrao));
                };
            }


            // Antes de enviar o form (Remove apenas os pontos de milhar, mantendo a vírgula)
            $('form').on('submit', function () {
                $('#MaoDeObra, #ValorDesconto').each(function () {
                    let v = $(this).val();
                    if (v) {
                        let valor_limpo = v.replace(/\./g, '');
                        $(this).val(valor_limpo);
                    }
                });

                // Peças
                $('input[name="pecaIds"]').remove();
                $('.peca-quantidade-input').each(function () {
                    var quantidade = parseInt($(this).val());
                    var pecaId = $(this).data('peca-id');
                    if (quantidade > 0) {
                        $('<input>').attr({
                            type: 'hidden',
                            name: 'pecaIds',
                            value: pecaId
                        }).appendTo('form');
                        $(this).attr('name', 'quantidades');
                    } else {
                        $(this).removeAttr('name');
                    }
                });
            });
        });
    </script>

}
