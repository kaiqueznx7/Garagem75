@model Garagem75.Models.OrdemServico

@{
    Layout = null;
    ViewData["Title"] = "Relatório Técnico da OS";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Relatório Técnico - OS @Model.IdOrdemServico</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            color: #222;
        }

        header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 2px solid #444;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

            header img {
                width: 100px;
            }

            header h1 {
                font-size: 24px;
                margin: 0;
            }

        .empresa-info {
            text-align: right;
            font-size: 13px;
        }

        .section {
            margin-bottom: 25px;
        }

            .section h2 {
                background: #f2f2f2;
                padding: 6px;
                border-left: 4px solid #444;
                font-size: 16px;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 13px;
        }

        th, td {
            padding: 6px;
            border-bottom: 1px solid #ccc;
        }

        th {
            background: #f9f9f9;
            text-align: left;
        }

        .totais {
            text-align: right;
            font-size: 14px;
            margin-top: 10px;
        }

        .observacoes {
            margin-top: 15px;
            font-size: 13px;
            white-space: pre-wrap;
        }

        footer {
            text-align: center;
            font-size: 12px;
            margin-top: 50px;
            border-top: 1px solid #ccc;
            padding-top: 10px;
        }

        @@media print {
            .btn-voltar {
                display: none;
            }
        }
    </style>
</head>

<body>
    <header>
        <div>
            <img src="~/img/logoFooter1.png" alt="Garagem 75" />
        </div>
        <div>
            <h1>GARAGEM 75</h1>
            <div class="empresa-info">
                CNPJ: 00.000.000/0001-00<br />
                Travessa Particular 1, 57 - Itaim Paulista<br />
                Tel: (11) 964749052<br />
                www.garagem75.com.br
            </div>
        </div>
    </header>

    <section class="section">
        <h2>Dados da Ordem de Serviço</h2>
        <p><strong>Nº OS:</strong> @Model.IdOrdemServico</p>
        <p><strong>Data:</strong> @Model.DataServico.ToString("dd/MM/yyyy")</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Entrega:</strong> @(Model.DataEntrega.ToString("dd/MM/yyyy") ?? "-")</p>
    </section>

    @* 🚗 Dados do veículo *@
    @if (Model.Veiculo != null)
    {
        <section class="section">
            <h2>Dados do Veículo</h2>
            <p><strong>Marca:</strong> @Model.Veiculo.Fabricante</p>
            <p><strong>Modelo:</strong> @Model.Veiculo.Modelo</p>
            <p><strong>Placa:</strong> @Model.Veiculo.Placa</p>
            <p><strong>Ano:</strong> @Model.Veiculo.Ano</p>

            @* Se quiser incluir o cliente (proprietário) *@
            @if (Model.Veiculo.Cliente != null)
            {
                <p><strong>Proprietário:</strong> @Model.Veiculo.Cliente.Nome</p>
            }
        </section>
    }

    <section class="section">
        <h2>Serviço</h2>
        <p>@Model.Descricao</p>
    </section>

    @if (Model.PecasAssociadas != null && Model.PecasAssociadas.Any())
    {
        <section class="section">
            <h2>Peças Utilizadas</h2>
            <table>
                <thead>
                    <tr>
                        <th>Peça</th>
                        <th>Marca</th>
                        <th>Quantidade</th>
                        <th>Valor Unitário</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PecasAssociadas)
                    {
                        <tr>
                            <td>@item.Peca.Nome</td>
                            <td>@item.Peca.Marca</td>
                            <td>@item.Quantidade</td>
                            <td>R$ @item.PrecoUnitario.ToString("F2")</td>
                            <td>R$ @(item.Quantidade * item.PrecoUnitario)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    }

    <section class="section">
        <h2>Totais</h2>
        <div class="totais">
            <p><strong>Total Peças:</strong> R$ @Model.PecasAssociadas.Sum(p => p.Quantidade * p.PrecoUnitario).ToString("F2")</p>
            <p><strong>Mão de Obra:</strong> R$ @Model.MaoDeObra.ToString("F2")</p>
            <p><strong>Desconto:</strong> R$ @Model.ValorDesconto.ToString("F2")</p>
            <p><strong style="font-size:16px;">TOTAL GERAL:</strong> <strong>R$ @Model.ValorTotal.ToString("F2")</strong></p>
        </div>
    </section>

    <footer>
        <p>Relatório técnico gerado em @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
        <p>Assinatura do mecânico: ____________________________</p>
        <p>Assinatura do cliente: ____________________________</p>
    </footer>

    <div style="text-align:center; margin-top:20px;">
        <button class="btn btn-primary btn-voltar" onclick="window.print()">🖨️ Imprimir Relatório</button>
        <a asp-action="Details" asp-route-id="@Model.IdOrdemServico" class="btn btn-secondary btn-voltar">⬅️ Voltar</a>
    </div>
</body>
</html>
