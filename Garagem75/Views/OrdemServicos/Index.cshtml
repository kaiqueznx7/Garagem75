@model IEnumerable<Garagem75.Models.OrdemServico>

@{
    ViewData["Title"] = "Ordens de Serviço";
}

<h1>Ordens de serviços</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Nova Ordem de Serviço</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Veiculo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataServico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @* CORREÇÃO: Remove a referência direta a 'Pecas' no cabeçalho *@
                Peças Utilizadas
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaoDeObra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorDesconto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEntrega)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(item.Veiculo != null ? $"{item.Veiculo.Modelo} - {item.Veiculo.Placa}" : "")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataServico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @* CORREÇÃO: Usa PecasAssociadas (ICollection<OrdemServicoPeca>) *@
                    @if (item.PecasAssociadas != null && item.PecasAssociadas.Any())
                    {
                        <ul>
                            @* Itera sobre a nova tabela de junção *@
                            @foreach (var associacao in item.PecasAssociadas)
                            {
                                @* Acessa a Peça real (associacao.Peca) e a Quantidade (associacao.Quantidade) *@
                                <li>
                                    @($"{associacao.Peca.Nome} (x{associacao.Quantidade}) - R$ {associacao.Subtotal:N2}")
                                </li>

                            }
                        </ul>
                    }
                    else
                    {
                        <em>Sem peças</em>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaoDeObra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorDesconto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataEntrega)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdOrdemServico" class="btn btn-primary">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.IdOrdemServico" class="btn btn-secondary">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.IdOrdemServico" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>