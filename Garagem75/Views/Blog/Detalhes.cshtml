@model Garagem75.Models.BlogPost

@{
    ViewData["Title"] = Model.Titulo;
}

<div class="container py-4">
    <h2>@Model.Titulo</h2>
    <p class="text-muted">Publicado em @Model.DataPublicacao.ToString("dd/MM/yyyy")</p>
    <img src="@Model.ImagemUrl" class="img-fluid mb-3 rounded" alt="@Model.Titulo" style="width: 600px; height: 400px; object-fit: cover;" />
    <div class="mt-4">
        @Html.Raw(Model.Conteudo)
    </div>
</div>
<div class="text-center">
    <a asp-controller="Blog" asp-action="Index" class="btn btn-secondary mt-4">← Voltar</a>
</div>

