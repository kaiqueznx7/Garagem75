
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GARAGEM 75</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap-spacelab.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        @@media print {
            /* Oculta a sidebar e elementos que não devem aparecer na impressão */
            .sidebar, .bg-dark, nav, header, footer

        {
            display: none !important;
            visibility: hidden !important;
        }

        /* Faz o conteúdo principal ocupar a largura total */
        .main-content, main, body {
            margin: 0 !important;
            padding: 0 !important;
            width: 100% !important;
        }

        /* Remove cores de fundo para impressão mais limpa */
        body {
            background: white !important;
            color: black !important;
        }

        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- SIDEBAR -->
        <div class="bg-dark text-white vh-100 p-3 shadow sidebar" style="width: 250px;">
            <h4 class="mb-4 text-white" >Menu</h4>
            <ul class="nav flex-column">

                <li><a class="nav-link text-light" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i> Inicio
                </a>
                </li>

                @if (User.IsInRole("Administrador") || User.IsInRole("Mecânico"))
                {
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="Cliente" asp-action="Index">
                            <i class="bi bi-people"></i> Clientes
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="OrdemServicos" asp-action="Index">
                            <i class="bi bi-clipboard-check"></i> Ordem de Serviços
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="Peca" asp-action="Index">
                            <i class="bi bi-gear"></i> Peças
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="Veiculo" asp-action="Index">
                            <i class="bi bi-car-front"></i> Veículos
                        </a>
                    </li>
                    
                }
                
               
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Usuario" asp-action="Index">
                        <i class="bi bi-person-circle"></i> Usuários
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="TipoUsuario" asp-action="Index">
                        <i class="bi bi-person-badge"></i> Tipos de Usuário
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-bar-chart-fill"></i> Dashboard
                    </a>
                </li>

                <li class="mt-4">
                    @* <a class="nav-link text-danger" asp-controller="Home" asp-action="Index">🚪 Sair</a> *@
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                    <li class="nav-item">
                        <span class="nav-link disabled">Olá, @User.Identity!.Name!</span>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Usuario" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link nav-link p-0">🚪 Sair</button>
                        </form>
                    </li>
                    }
                    else
                    {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Usuario" asp-action="Login">Área Restrita</a>
                    </li>
                    }

                </li>
            </ul>
        </div>

        <!-- CONTEÚDO PRINCIPAL -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Seções de scripts adicionais (ex: validação, JS específico por página) -->
    @RenderSection("Scripts", required: false)
</body>
</html>
