@model IEnumerable<Garagem75.Models.Peca>

@{
    ViewData["Title"] = "Lista de Peças";
}

<h1>Lista de Peças</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Nova peça</a>
</p>

<!-- FORMULÁRIO DE FILTRO -->
<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <select name="marca" asp-items="ViewBag.Marcas" class="form-select">
            <option value="">-- Todas as Marcas --</option>
        </select>
    </div>
    <div class="col-md-4">
        <input type="text" name="searchString" class="form-control"
               placeholder="Buscar peça ou fornecedor..."
               value="@Context.Request.Query["searchString"]" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Filtrar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpar</a>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.CodPeca)</th>
            <th>@Html.DisplayNameFor(model => model.Marca)</th>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Preco)</th>
            <th>@Html.DisplayNameFor(model => model.Fornecedor)</th>
            <th>@Html.DisplayNameFor(model => model.QuantidadeEstoque)</th>
            <th>@Html.DisplayNameFor(model => model.DataCadastro)</th>
            <th>@Html.DisplayNameFor(model => model.DataUltimaAtualizacao)</th>
            <th>@Html.DisplayNameFor(model => model.Imagem)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CodPeca)</td>
                <td>@Html.DisplayFor(modelItem => item.Marca)</td>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Preco)</td>
                <td>@Html.DisplayFor(modelItem => item.Fornecedor)</td>
                <td>@Html.DisplayFor(modelItem => item.QuantidadeEstoque)</td>
                <td>@Html.DisplayFor(modelItem => item.DataCadastro)</td>
                <td>@Html.DisplayFor(modelItem => item.DataUltimaAtualizacao)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Imagem))
                    {
                        <img src="@item.Imagem" alt="Imagem da peça" width="100" height="100" />
                    }
                    else
                    {
                        <span>Nenhuma imagem</span>
                    }
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdPeca" class="btn btn-primary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdPeca" class="btn btn-secondary">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdPeca" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
