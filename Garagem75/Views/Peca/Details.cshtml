@model Garagem75.Models.Peca

@{
    ViewData["Title"] = "Detalhes da peça";
}

<h1>Detalhes</h1>

<div>
    <h4>Peca</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodPeca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodPeca)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeEstoque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeEstoque)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataUltimaAtualizacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataUltimaAtualizacao)
        </dd>
    </dl>
</div>
<!-- Coluna com a imagem -->
<div class="col-md-4 text-center">
    <img src="@Model.Imagem" alt="@Model.Nome"
         class="img-fluid rounded shadow"
         style="max-height: 400px;" />
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdPeca" class="btn btn-primary">Editar</a> 
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
