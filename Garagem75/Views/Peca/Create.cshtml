@model Garagem75.Models.Peca

@{
    ViewData["Title"] = "Cadastrar Peça";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="CodPeca"></label>
        <input asp-for="CodPeca" class="form-control" />
        <span asp-validation-for="CodPeca" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Marca"></label>
        <input asp-for="Marca" class="form-control" />
        <span asp-validation-for="Marca" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control" id="Preco" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fornecedor"></label>
        <input asp-for="Fornecedor" class="form-control" />
        <span asp-validation-for="Fornecedor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuantidadeEstoque"></label>
        <input asp-for="QuantidadeEstoque" class="form-control" />
        <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataCadastro"></label>
        <input asp-for="DataCadastro" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="DataUltimaAtualizacao"></label>
        <input asp-for="DataUltimaAtualizacao" class="form-control" />
    </div>

    <div class="form-group">
        <label>Imagem (opcional)</label>
        <input type="file" name="ImagemUpload" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#Preco').mask('000.000.000,00', { reverse: true });
        });
    </script>
}
