@model IEnumerable<Garagem75.Models.TipoUsuario>

@{
    ViewData["Title"] = "Tipos de usuarios";
}

<h1>Tipos de usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoTipoUsuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoTipoUsuario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTipoUsuario" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdTipoUsuario" class="btn btn-secondary">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTipoUsuario" class="btn btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
