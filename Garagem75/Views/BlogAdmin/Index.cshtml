@model IEnumerable<Garagem75.Models.BlogPost>

@{
    ViewData["Title"] = "Gerenciar Blog";
}

<h2>Gerenciar Blog</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Novo Post</a>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Publicado em</th>
            <th>Ativo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Titulo</td>
                <td>@post.DataPublicacao.ToString("dd/MM/yyyy")</td>
                <td>@(post.Ativo ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
